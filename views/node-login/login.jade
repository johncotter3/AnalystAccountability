extends ../layout

block content
  .container
    #login-container
      form( method="post")#login-form.well.span4
        h1 Hello!
        p.subheading Please Login To Your Account
        label Username 
        input(type="text", name="user", id='user-tf').span4.required
        label Password
        input(type="password", name="pass", id='pass-tf').span4.required
        button(type="submit")#btn-login.btn.btn-primary
          i.icon-lock.icon-white
          | Sign in
        label#remember-me.checkbox Remember Me
          input(type="checkbox", checked='checked')
        div.clear-fix
        hr
        div.btm-links
          p
            a(href='#')#forgot-password Forgot Your Password?
          p
            a(href='/signup')#create-account Create An Account
    
    include modals/alert
    include modals/lost-password

block scripts
  script(src='../node-login/app/public/vendor/jquery.min.js')
  script(src='../node-login/app/public/vendor/jquery.form.js')
  script(src='../node-login/app/public/vendor/bootstrap-modal.js')
  script(src='../node-login/app/public/vendor/bootstrap-transition.js')
  script(src='../node-login/app/public/js/views/login.js')
  script(src='../node-login/app/public/js/controllers/loginController.js')
  script(src='../node-login/app/public/js/form-validators/loginValidator.js')
  script(src='../node-login/app/public/js/form-validators/emailValidator.js')