extends layout

block content
  
  script.
    $('#analysts_li').addClass('active');
  .container
    .row-fluid.heading
      .span12
        h1 Analyst Accuracy
        p &nbsp;
        table.table-striped(id="firmTable" align="center" width="100%" cellpadding="0" cellspacing="0" border="0")
          thead
            tr
              th(height="15")
                p
                  b Analyst
              th(height="15")
                p
                  b Percent Error
              th(height="15")
                p
                  b Number Ratings
          tbody        
            each doc, i in forecast
              tr
                td
                  p
                    a(href='/analysts/'+doc._id) #{doc._id}
                td
                  p #{doc.value.avg}
                td
                  p #{doc.value.count}

